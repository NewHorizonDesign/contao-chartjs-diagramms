{
    "name": "newhorizondesign/contao-chartjs-diagramms",
    "description": "Contao Bundle Diagramms based on Chart.js",
    "keywords": [
        "contao",
        "bundle",
        "chartjs",
        "newhorizondesign",
        "bundle"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "NewHorizonDesign",
            "email": "service@newhorizon-design.de",
            "homepage": "https://github.com/NewHorizonDesign",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/newhorizondesign/contao-chartjs-diagramms/issues",
        "source": "https://github.com/newhorizondesign/contao-chartjs-diagramms"
    },
    "require": {
        "php": "^8.0",
        "contao/core-bundle": "^4.13 || ^5.0",
        "charts/chart.js": "^3.9.1"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3.1",
        "contao/test-case": "^4.5",
        "phpunit/phpunit": "^9.3",
        "symfony/http-client": "5.4.*",
        "symfony/phpunit-bridge": "^5.4",
        "contao/easy-coding-standard": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Newhorizondesign\\ContaoChartjsDiagramms\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/chartjs/Chart.js.git"
        }
    ],
    "extra": {
        "contao-manager-plugin": "Newhorizondesign\\ContaoChartjsDiagramms\\ContaoManager\\Plugin"
    }
}
